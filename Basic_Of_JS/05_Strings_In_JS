// Concatinate the string variabel
const stringVariable1 = "Nikhil";
const stringVariable2 = "Gurav"

// Basic way to concatinate the string variable
console.log(stringVariable1 + stringVariable2);

// Use interpolition to concate the string variables
console.log(`variable one : ${stringVariable1} and variable two : ${stringVariable2}`);

// String object 
const testVariable  = new String("Nikhil");

// Checking the object store what
console.log(testVariable.length); // Gives the length of value that gives in constructor.
console.log(testVariable[0]); // Print the 0th variable of the testVariable
console.log(testVariable.charAt(2)); // Check the variabel at index 2